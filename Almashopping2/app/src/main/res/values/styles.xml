<resources>

    <!-- Base application theme. -->
    <style name="Theme.Alma" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#000000</item>

        <!-- Support library compatibility -->
        <item name="background">@color/black</item>
    </style>

    <style name="Theme.Alma.EncabezadoSecciones">
        <item name="android:background">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Alma.EncabezadoDetalleProducto">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Theme.Alma.ContenedorProducto">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="Theme.Alma.ContenedorProductos">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="Theme.Alma.tituloProductos">
        <item name="android:textColor">@color/list_background_pressed</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Alma.precio">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11dp</item>
    </style>
</resources>
