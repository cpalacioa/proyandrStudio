<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lnCategias">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.Alma.EncabezadoSecciones"
        android:text="CATEGORIAS"/>

    <ExpandableListView
        android:id="@+id/lvCategorias"
        android:layout_height="match_parent"
        android:background="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_gravity="fill_vertical"

        />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lnProductosCategoria"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.Alma.EncabezadoSecciones"
            android:text="CATEGORIAS2"
            android:id="@+id/txtCategoriaNombre"/>

        <GridView
            android:id="@+id/Grid_productos_categoria"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            style="@style/Theme.Alma.ContenedorProductos"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:columnWidth="100dp"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            />


    </LinearLayout>
</LinearLayout>