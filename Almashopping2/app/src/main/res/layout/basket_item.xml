<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iconbasket"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/producto"
        android:layout_centerVertical="true" />
 <LinearLayout
     android:id="@+id/infoProductbasket"
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:gravity="center_vertical"
     android:layout_marginLeft="5dp"
     android:layout_marginRight="2dp"
     android:layout_toRightOf="@+id/iconbasket"
     android:layout_toLeftOf="@+id/counterbasket"
     android:layout_toStartOf="@+id/counterbasket">
     <TextView
         android:id="@+id/baskproducttitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textStyle="bold"
         android:textColor="@color/greendark"
         android:textSize="12dp"
         android:gravity="center_vertical"
         android:paddingRight="1dp"/>
     <TextView
         android:id="@+id/baskproducbrand"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/black"
         android:textSize="10dp"
         android:gravity="center_vertical"
         android:paddingRight="40dp"/>

     <TextView
         android:id="@+id/baskproducprice"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/black"
         android:text="0"
         android:textStyle="bold"
         android:textSize="14dp"
         android:gravity="center_vertical"
         android:paddingRight="40dp"/>

     </LinearLayout>

    <TextView android:id="@+id/counterbasket"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@color/black"
        android:layout_toLeftOf="@+id/btnEliminarbasket"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginRight="8dp"
        android:textColor="@color/white"/>
    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:background="@color/red"
        android:id="@+id/btnEliminarbasket"
        android:src="@drawable/ic_action_minus"/>

</RelativeLayout>