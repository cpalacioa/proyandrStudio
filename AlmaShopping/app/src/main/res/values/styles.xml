<resources>

    <!-- Base application theme. -->
    <style name="Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="Widget" />

    <style name="Widget.SampleMessage">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Widget.SampleMessageTile">
        <item name="android:background">@drawable/tile</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowDy">-3.5</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="Theme.Alma">

    </style>
    <!-- Estilos para textos del catalogo -->
    <style name="Theme.Alma.Catalogo">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">#EDEDED</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Theme.Alma.Catalogo.Titulo">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">6pt</item>
    </style>

    <style name="Theme.Alma.Catalogo.Autor">
        <item name="android:textSize">4pt</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Theme.Alma.Catalogo.Valor">
        <item name="android:textColor">#0CB490</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Alma.Catalogo.Encabezado">
        <item name="android:background">#EDEDED</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
